<Page
    x:Class="WordJumble.Game"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WordJumble"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="gameDisplay">
        <TextBlock x:Name="txtTimeDisplay" 
                   HorizontalAlignment="Center" 
                   Text="0:00" 
                   FontSize="31"
                   Margin="176,173,98,429" 
                   TextWrapping="Wrap"
                   VerticalAlignment="Center"
                   Style="{StaticResource TitleTextBlockStyle}" 
                   Width="126"/>
        <TextBlock HorizontalAlignment="Left" 
                   TextWrapping="Wrap" 
                   Text="Score: " 
                   FontSize="30"
                   VerticalAlignment="Top"
                   FontWeight="Bold"
                   Margin="100,245,0,0"/>
        <TextBlock x:Name="txtScore"
                   HorizontalAlignment="Left" 
                   TextWrapping="Wrap" 
                   Text="rffy" 
                   FontSize="30"
                   FontWeight="Bold"
                   VerticalAlignment="Top" 
                   Margin="250,245,0,0"/>
        <TextBlock x:Name="txtJumbledWord" 
                   Text=""
                   FontSize="50"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   TextWrapping="Wrap"/>
        <TextBox x:ConnectionId='1' x:Name="txtEnteredWord"
                 VerticalAlignment="Center" 
                 Margin="0,378,0,223" 
                 Width="300"
                 TextWrapping="Wrap" 
                 Text="" 
                                      
                 InputScope="Chat"/>
        <Button x:ConnectionId='2' Content="Enter" 
                HorizontalAlignment="Center" 
                Margin="149,438,142,145" 
                                      
                VerticalAlignment="Center"/>
        <TextBlock x:Name="txtResult"
                   HorizontalAlignment="Center"
                   Height="65"
                   TextWrapping="Wrap"
                   FontSize="60"
                   Width="300"
                   TextAlignment="Center"
                   Text="" 
                   Margin="50,509,50,66" />
        <TextBlock x:Name="txtUnJumbledWord" 
                   HorizontalAlignment="Center"  
                   TextWrapping="Wrap" 
                   Text=""
                   Height="30"
                   Width="100"
                   TextAlignment="Center"
                   FontSize="10" 
                   Margin="149,600,151,10"/>
    </Grid>
</Page>

