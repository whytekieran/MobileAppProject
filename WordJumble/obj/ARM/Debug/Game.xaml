                 VerticalAlignment="Center" 
                 Margin="0,378,0,223" 
                 Width="300"
                 TextWrapping="Wrap" 
                 Text="" 
                                      
                 InputScope="Chat"/>
        <Button x:ConnectionId='2' Content="Enter" 
                HorizontalAlignment="Center" 
                Margin="149,438,142,145"                       />
        <TextBlock x:Name="txtResult"
                   HorizontalAlignment="Center"
                   Height="65"
                   TextWrapping="Wrap"
                   FontSize="60"
                   Width="300"
                   TextAlignment="Center"
                   Text="" 
                   Margin="50,509,50,66" />
        <TextBlock x:Name="txtUnJumbledWord" 
                   HorizontalAlignment="Center"  
                   TextWrapping="Wrap" 
                   Text=""
                   Height="30"
                   Width="100"
                   TextAlignment="Center"
                   FontSize="10" 
                   Margin="149,600,151,10"/>
    </Grid>
</Page>

