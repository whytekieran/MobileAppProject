<Page
    x:Class="WordJumble.HighScores"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WordJumble"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        
    <Grid Margin="5,5,5,5">
            <ScrollViewer>
                <ListBox x:Name="gameHighScoreList"
                     Margin="20,20,20,20"
                     FontWeight="Bold"
                     Background="Transparent">
                    <ListBox.ItemTemplate>
                   <DataTemplate>
                      <ListBoxItem Background="{StaticResource ListBoxItemSelectedBackgroundThemeBrush}"
                                   Margin="5,5,5,5">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="txtRank"
                                TextWrapping="Wrap"
                                Style="{StaticResource ListViewItemTextBlockStyle}"
                                HorizontalAlignment="Center" 
                                Text="{Binding Id}"
                                Height="40"
                                Width="90"
                                Margin="10"
                                FontSize="13"
                                VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtScore"
                                TextWrapping="Wrap"
                                Style="{StaticResource ListViewItemTextBlockStyle}"
                                HorizontalAlignment="Center" 
                                Text="{Binding score}"
                                Height="40"
                                Width="90"
                                Margin="10"
                                FontSize="13"
                                VerticalAlignment="Center"/>
                            <TextBlock x:Name="txtName"
                                TextWrapping="Wrap"
                                Style="{StaticResource ListViewItemTextBlockStyle}"
                                HorizontalAlignment="Center" 
                                Text="{Binding Name}"
                                Height="40"
                                Width="90"
                                Margin="10"
                                FontSize="13"
                                VerticalAlignment="Center"/>
                        </StackPanel>
                      </ListBoxItem>
                   </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>

