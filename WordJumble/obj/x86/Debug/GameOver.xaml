<Page
    x:Class="WordJumble.GameOver"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WordJumble"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="LayoutRoot" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--TitlePanel contains the name of the application and page title-->
        <StackPanel x:Name="TitlePanel"
                    Grid.Row="0"
                    Margin="10,10,10,10">
            <TextBlock Text="Enter High Score"
                       TextAlignment="Center"
                       Margin="2,2,2,2"
                       FontWeight="Bold"
                       Style="{StaticResource SubheaderTextBlockStyle}" />
        </StackPanel>

        <StackPanel Grid.Row="1"
              Margin="5,5,5,5"/>
        <TextBlock HorizontalAlignment="Left" 
        	TextWrapping="Wrap" 
        	Text="Score" 
        	FontSize="30"
        	VerticalAlignment="Top" 
            Margin="78,104.667,0,-118.667" 
            Grid.Row="1"/>
        <TextBlock x:Name="txtScore"
                   HorizontalAlignment="Left" 
                   TextWrapping="Wrap" 
                   Text="" 
                   VerticalAlignment="Top"
                   FontSize="30" 
                   Margin="190,104.667,0,-119" 
                   Grid.Row="1"/>
        <TextBox x:Name="txtUserName" 
                 HorizontalAlignment="Left" 
                 Margin="216,221.667,0,-239" 
                 TextWrapping="Wrap" 
                 Text="" 
                 VerticalAlignment="Top" Grid.Row="1" Width="143"/>
        <TextBlock HorizontalAlignment="Left" 
                   TextWrapping="Wrap" 
                   Text="Enter Name Here" 
                   FontSize="20"
                   VerticalAlignment="Top" 
                   Margin="39,236.667,0,-239" 
                   Grid.Row="1"/>

    </Grid>
</Page>

